{
  "expo": {
    "name": "TerraGuard Botanica",
    "slug": "terraguard-botanica",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "terraguard",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.terraguard",
      "infoPlist": {
        "NSCameraUsageDescription": "Bitki ve mantar fotoğraflarını analiz etmek için kameraya ihtiyaç duyuyoruz.",
        "NSLocationWhenInUseUsageDescription": "Bölgesel tür önerileri için konumunu kullanıyoruz."
      }
    },
    "android": {
      "package": "app.terraguard",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyD6qbzX17GMI65bS_ffYRC7CdaAvf_zKb8"
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-camera",
      "expo-location",
      "expo-build-properties"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "locales": {
      "tr": "./assets/locales/tr.json"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "9bb4dd0e-5637-426b-bba3-bd72acb4bc02"
      }
    }
  }
}